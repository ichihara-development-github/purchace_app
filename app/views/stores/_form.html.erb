
    <%= form_for @store do |f| %>
    <div class = "form-group">
       <%= f.label :top_image, class: "image-label" do%>
        <h3>トップイメージ<span style ="color:red">*</span></h3>
        <span class = "far fa-images fa-3x"></span>
        <%= f.file_field :top_image, class: "file-field"%>
        <% end %>
    </div>
          <div class="form-group">
            <%= f.label :name %>
            <span style = "color:red">*</span>
            <%= f.text_field :name, required: true, class: "form-control", id: "exampleInputEmail1" %>
          </div>

          <div class = "form-group">
               <%= f.label "カテゴリー"%>
              <%= f.select :category, options_for_select(category),{},class: "form-control col-md-4"%>
          </div>
           <div class="form-group">
            <%= f.label "詳細"%>
            <%= f.text_area :description, required: true, class: "form-control", id: "exampleInputEmail1", style: "height:300px" %>
          </div>
         <div class = "form-group">
          <%= f.submit "この内容で決定する", class: "btn btn-primary col-md-4"%>
         </div>
    <% end %>