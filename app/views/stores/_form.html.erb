<%= form_for @store do |f| %>

    <div class = "col-md-10 middle" >
        <div class = "form-group center">
            <h4>店舗のトップ画像</h4>
           <div class = "middle">
              <% if @store.top_image.present? %>
                <%= image_tag @store.top_image, class: "input-image", id: "top_img_output"%>
              <% else %>
                <img class = "rounded input-image", id="top_img_output">
              <% end %>

               <div class = "margin-vertical">
                 <%= f.label :top_image, "+ 画像をアップ", class: "image-up" %>
                 <%= f.file_field :top_image, class: "upfile", style: "display: none"%>
               </div>
                </div>
        </div>
              <div class="form-group">
                <%= f.label "店舗名" %>
                <span style = "color:red">*</span>
                <%= f.text_field :name, required: true, class: "form-control", id: "exampleInputEmail1" %>
              </div>

              <div class = "form-group">
                   <%= f.label "カテゴリー"%>
                  <%= f.select :category, options_for_select(category),{},class: "form-control col-md-4"%>
              </div>
               <div class="form-group">
                <%= f.label "詳細"%>
                <%= f.text_area :description, required: true, class: "form-control", id: "exampleInputEmail1", style: "height:300px" %>
              </div>

              <div class="form-group">
               <%= f.label "住所"%>
               <%= f.text_field :address, required: true, class: "form-control" %>
             </div>
             <div class = "form-group">
              <%= f.submit "保存", class: "btn btn-primary col-md-4"%>
             </div>
        </div>
    <% end %>
