 <div class = "margin-vertical">
 <span class = "dropdown-toggle right"> 購入履歴</span>
 <div class = "display-400 row" style = "clear:both;display:none">
  <% @purchases.each do |datum| %>
   <%= render "basket",  basket: datum, obj: "purchase" %>
  <% end %>
 </div>

</div>

<div class = "container">
     <div class = "margin-vertical">
         <% unless @products.blank? %>
           <h5><%= basket_count %>点</h5>
           <h5>商品合計 ¥<%= basket_sum %></h5>
           <h5>+ 送料 <%= postage %></h5><br />
           <%= render "shared/postage_explanation" %><br />
           <div class="row basket-index">
            <%= render @baskets, obj: "basket" %>
           </div>
           合計:<h3 style = "color:red"> ¥<%= basket_sum + postage %></h3>
        <% end %>
       </div>
    <div class = "right">
      <% if @baskets.exists? %>
         <%= link_to "レジに進む", new_purchase_path, class: "accounting-btn" %>
      <% else %>
         <p>商品をカートに追加してください</p>
      <% end %>
     </div>

 </div>
