 <div class = "margin-vertical">
 <span class = "dropdown-toggle dropdown-log right"> 購入履歴 </span>
 <div class = "display-300 row purchaselog" style = "clear:both;display:none">
  <% @purchases.each do |datum| %>
   <%= render "basket",  basket: datum, obj: "purchase" if @purchases %>
  <% end %>
 </div>

</div>

<div class = "container">
     <div class = "margin-vertical">
         <% unless @products.blank? %>
           <h5><%= basket_count %>点</h5>
           <h5>商品合計 ¥<%= basket_sum %></h5>
           <h5>+ 送料 <%= postage %></
             h5><br />
           <%= render "shared/postage_explanation" %><br />
           <div class="row basket-index">
            <%= render @baskets, obj: "basket" %>
           </div>
           <div id ="basket_sum">
            <%= render "basket_sum"%>
           </div>
        <% end %>
       </div>
    <div class = "row">
      <% if @baskets.exists? %>
      <div class="col-md-12">
         <%= link_to "レジに進む", new_purchase_path, class: "col-md-6 middle accounting-btn", data: {"turbolinks" => false}  %>
      </div>
      <% else %>
         <p class = "center">商品をカートに追加してください</p>
      <% end %>
     </div>

 </div>
