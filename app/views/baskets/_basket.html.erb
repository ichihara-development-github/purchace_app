<% product = basket.product%>
   <div class="col-md-10 margin-vertical basket-wrapper">
     <% if product.main_image.present? %>
         <%= image_tag product.main_image,style:"width:30%",class: "left card-img" %>
      <% else %>
       <img class="left card-img" style = "width:30%" src="https://purchase-app-backet.s3-ap-northeast-1.amazonaws.com/uploads/no-image.jpg" alt="Something">
     <% end %>
      <div class = "basket-container right">
        <div class="right">
          <div class="right">
            <h4 style = "font-color:red">¥ <%= product.price %></h4>
            <%= form_for basket,url: basket_path(basket), html: {method: "patch"}, remote: true do |f| %>
            <span>
              <% if obj == "basket" %>
               <%= f.select :count, (1..product.count).map{|i| i}, {}, class: "form-control update-input-form"%>
             <% else %>
               ×　<%= basket.count %>
             <% end %>
           </span><br />
             <% f.submit %>
             <span><%= @notification %></span>
            <% end %>
            <div class="pd">
              <%= link_to "削除", basket_delete_path(product), method: :post, class: "right btn btn-danger" unless obj == "purchase"%>
            </div>
          </div>
        </div>
          <div calss = "container">
          <%= link_to product_path(product) do %>
              <h4><%= product.name %></h4>
          <% end %>
             <p><%= product.description %></p>
             <span>店舗:　<%= link_to store_path(product.store) do %><%= product.store.name %><% end %></span>
          </div>
     </div>
    </div>
