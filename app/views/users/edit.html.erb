<%= form_for(@user,maltipart: true) do |f| %>


  <div class= "col-md-6 middle">
  <div class = "margin-vertical">
    
    <div class = "form-group center" >
        <h4>プロフィール画像</h4>
        <div class = "middle">
          <% if @user.profile_image.present? %>
            <%= image_tag @user.profile_image, class: "input-image"%>
          <% else %>
            <img class = "rounded input-image", id="profile_img_output">
          <% end %>
           <div class = "margin-vertical">
             <%= f.label :profile_image, "+ 画像をアップ", class: "image-up" %>
             <%= f.file_field :profile_image, class: "upfile", style: "display: none"%>
           </div>
        </div>
        
    </div>
    
    <div class = "form-group">
        <%= f.label :name %><span style = "color:red">*</span>
        <%= f.text_field :name, required: true, class: "form-control" %><br />
     
        <%= f.label :email %><span style = "color:red">*</span>
        <%= f.text_field :email, required: true, class: "form-control" %><br />
        
        <%= f.label :introduce %>
        <%= f.text_area :introduce,class: "form-control"  %><br />
        
    </div>
    
    <%= f.submit "ユーザーを登録" ,class:"col-md-4 btn btn-primary" %>
     </div>
    </div>
  <% end %>

</div>

 