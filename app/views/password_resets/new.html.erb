<h1>パスワードのリセット</h1>
<div class = "container">

<div class="row">
  <div class="col-md-6">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %><br />

      <%= f.submit "送信", class: "col-md-6 btn btn-primary" %>
    <% end %>
  </div>
</div>

</div>