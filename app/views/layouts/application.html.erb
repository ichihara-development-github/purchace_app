<!DOCTYPE html>
<html>
  <head>
    <title>Purchace App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src = "http://js.stripe..com/v3/"></script>
    <%= csrf_meta_tags %>
    
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application','data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
    
    <%= javascript_tag do %>
    
    function add_required(){
    
        var sum =[];
        
        $(".price-search").each(function(){
          sum.push.$(this).val()
          
          if (sum.length > 0){
          $(".price-search").attr("required", "true")}else{
          $(".price-search").removeAttr("required")
          }
        })
 
    };
    
    $(function(){
    
    
    
    $(".dropdown-toggle").click(function(){
        $(this).next(".dropdown-menu").fadeToggle()
    });
    
    
    $(".dropdown-log").on("click", function(){
        $(this).next(".purchacelog").slideToggle()
    });
    
    $(".fade-menu-toggle").on("click", function(){
        $(this).next(".fade-menu").fadeToggle()
    });
    
    $('.slide-menu-toggle').on("click", function(){
     $(".slide-menu").toggleClass("open");
  })
  
  //パスワードフォーム
  $("#password-icon-toggle").on("click",function() {
   
    $(this).toggleClass("fa-eye-slash");
    
    var form = $(".password-form");
    
    // type切替
    if (form.attr("type") == "password") {
      form.attr("type", "text");
    } else {
      form.attr("type", "password");
    }
    });
    
    //image_input
    
    function readURL(input) {
        if (input.files && input.files[0]) {
        var reader = new FileReader();
        reader.onload = function (e) {
    $('#img_prev').attr('src', e.target.result);
        }
        reader.readAsDataURL(input.files[0]);
        }
    }
    
    $("#production_image").change(function(){
        readURL(this);
    });

    var headersHeight = $('header').outerHeight(); 
    $('.main').css('padding-top', headersHeight + 'px'); 
    $('.slide-menu').css('margin-top', headersHeight + 'px');
    
});
    
    <% end %>
     <%= render "layouts/navigation" %>
        <div class = "main container">
           <%= render "layouts/message" %>
           <%= yield %>
        </div>
      </div>
    </div>
    
  </body>
</html>

            