<div class = "middle shadow" style = "max-width:800px">
  　<div class = "container">
    <h2>検索フォーム</h2>

  <div class="form-group pd-10">
    <%= form_tag(search_path, method: :get) do %>
     <div class="form-group">
       <div class="row col-md-5">
         <label>カテゴリー</label>
         <%= select_tag(:category, options_for_select(choice("category")), :class => "form-control", :include_blank => true) %><br>
       </div>
    <div class="row">
      <div class = "col-md-5">
        <%= label_tag "下限金額"%>
        <%= text_field_tag :min,"",:class => "price-search form-control" %>
      </div>
      <div class = "col-md-5">
         <%= label_tag "上限金額"%>
         <%= text_field_tag :max,"", :class => "price-search form-control" %>
      </div>
    </div>
    <div class = "row">
      <div class = "col-md-5">
      <label>店舗で選ぶ</label>
       <%= select_tag("store_id", options_for_select(select_store), :class => "form-control", :include_blank => true) %><br>
      </div>
  </div>
    <%= submit_tag "この条件で検索", :class => "btn btn-primary col-md-8" %><br><br>
   <% end %>
  </div>
      <div class="form-group col-md-8 middle">
        <div>
        <%= form_tag(free_search_path, method: :get) do %>
        <div class = "row">
          <div class="col-9">
            <%= text_field_tag :free_word,"",:class => "form-control", :placeholder => "フリーワード"%>
          </div>
          <%= button_tag '<i class="fa fa-search"></i>'.html_safe, class: "col-2 btn btn-primary", style: "margin:0 10px" %>
        </div>
        <% end %>
      </div>
  </div>
  </div>
    </div>
