<% if prices.is_a?(String) %>
  <div class="compare_amazon"><%= prices %></div>
<% else %>
  <% prices.each do |price| %>
  <% average = price["Average"]
    site = price["Site"]
  %>
  <% diff = average - product.price %>
  <% diff > 0 ? text = "安い"
     : diff < 0 ? text = "高い"
     :  "同価格" %>
  <div class="compare_amazon">
    <h4><%= site %> との比較</h4>
      <ul class = "">
        <li style  = "font-weight:bold">平均値: <%= average %></li>
        <li>最高価格: <%= price["Max"] %></li>
        <li>最低価格: <%= price["Min"] %></li>
      </ul>
      <h5><%= price["Datetime"] %>更新</h5>
      <span>この商品は<%= site %>の平均と比べて ¥<%= diff.abs %> <%= text %>です。</span>
  </div>
  <% end %>
<% end %>
