<div class = "search-form shadow margin-vertical">
  　<div class = "container">
    <h2>検索フォーム</h2>
    
  <div class="form-group">
    <%= form_tag(search_path, method: :get) do %>
     <div class="form-group">
    <label for="exampleFormControlSelect1">カテゴリー</label>
       <%= select_tag(:category, options_for_select(choice("category")), :class => "form-control col-md-3", :include_blank => true) %><br>
      
    <div class="row">
      <div class = "col-md-4">
        <%= label_tag "下限金額"%>
        <%= text_field_tag :min,"",:class => "price-search form-control", :onchange => "add_required()" %>
      </div>
      <div class = "col-md-4">
         <%= label_tag "上限金額"%>
         <%= text_field_tag :max,"", :class => "price-search form-control" %>
      </div>
    </div>
    <div class = "row">
      <div class = "col-md-3">
      <label for="exampleFormControlSelect1">Storeで選ぶ</label>
       <%= select_tag("store_id", options_for_select(select_store), :class => "form-control", :include_blank => true) %><br>
      </div>
    
    </div>
  </div>
    <%= submit_tag "この条件で検索", :class => "btn btn-primary col-md-4" %><br><br>
   <% end %>
  </div>
      <div class="form-group">
        <div class = "col-md-10">
        <%= form_tag(free_search_path, method: :get) do %>
        <div class = "row cen">
          <%= text_field_tag :free_word,"",:class => "form-control col-md-4", :placeholder => "フリーワード"%>
          <%= button_tag '<i class="fa fa-search"></i>'.html_safe, class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>
     
  </div>
  </div>
    </div>