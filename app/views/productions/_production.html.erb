<div class="row">
    <% obj.each do |production| %>
      <div class="col-6 col-md-3 pd-5  margin-vertical">
        <div class="shadow">
            <% if production.main_image.present? %>
              <%= image_tag production.main_image , class: "long-img"%>
             <% else %>
              <img class="long-img" src="https://purchase-app-backet.s3-ap-northeast-1.amazonaws.com/uploads/no-image.jpg" alt="Something">
            <% end %>
              <div class="card-body">
                <%= link_to production_path(production) do %>
                    <h5 ="card-title"><%= production.name %></h5>
                <% end %>
                <span>¥<%= production.price %></span>
                  <span class = "production-basket-<%= production.id %>" >
                    <% if current_user %>
                      <%= render "productions/cart_link", production: production %>
                    <% else %>
                      <%= link_to production_path(production) do%>
                        <button type="button" class="right btn", style = "background-color: orange">追加</button>
                      <% end %>
                    <% end %>
                  </span>
              </div>
      </div>
      </div>
    <% end %>
</div>
