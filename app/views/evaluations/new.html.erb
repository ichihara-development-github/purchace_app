<%= form_for @evaluation do |f| %>
      <%= f.hidden_field :product_id, :value => @product.id %>
  <div class= "col-md-10 middle">
    <div class="form-group row" id="star">
      <%= f.label :star,'評価 ', class:'col-md-3 col-form-label' %>
      <%= f.hidden_field :star, id: :review_star %>
    </div>
    <div class="form-group row">
      <%= f.label :comment,'コメント', class:'col-md-3 col-form-label' %>
      <%= f.text_area :comment, required: true, class: "form-control", style: "height:200px"%><br />
    </div>
    <div class="form-group">
      <%= f.submit "投稿",  class:"btn btn-success"%>
    </div>
<% end %>

<script>
  $('#star').raty({
    size     : 36,
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    scoreName: 'evaluation[star]',
    half: true,
  });
  </script>
